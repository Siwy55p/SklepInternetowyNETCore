@model IEnumerable<partner_aluro.Models.Category>
@{
    ViewData["Title"] = "Lista kategori";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<a type="button" class="btn btn-success" asp-controller="Category" asp-action="Add" >Dodaj Kategorie</a>


<a type="button" class="btn btn-success" asp-controller="Category" asp-action="AddSubCategory">Dodaj Podkategorie</a>


    @if (@Model != null && @Model.Any())
    {
        <div class="row">
            <div class="col-md-12 mb-3">
                <div class="card">
                    <div class="card-header">
                        <span><i class="bi bi-table me-2"></i></span> Data Table
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="example"
                               class="table table-striped data-table"
                               style="width: 100%">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Nazwa</th>
                                        <th>Kolejnosc</th>
                                        <th>Edit</th>
                                        <th>Usuń</th>
                                        <th>Wł/Wył</th>
                                        <th>Ilość Produktów w kategorii</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var cat in Model)
                                    {
                                        <tr>
                                            <td>@cat.CategoryId</td>
                                            <td>@cat.Name</td>
                                            <td>@cat.kolejnosc</td>
                                            <td>
                                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@cat.CategoryId">Edit</a>
                                            </td>
                                            <td>
                                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@cat.CategoryId">Usuń</a>
                                            </td>
                                            <td>@cat.Aktywny</td>
                                            <td>
                                                @if (cat.Produkty != null)
                                                {
                                                    @cat.Produkty.Count
                                                }
                                            </td>
                                        </tr>
                                        @foreach (var item in cat.SubCategories)
                                        {
                                            <tr>
                                                <td>@item.CategoryId</td>
                                                <td>@item.Name</td>
                                                <td>podkategoria</td>
                                                <td>
                                                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@cat.CategoryId">Edit</a>
                                                </td>
                                                <td>
                                                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@cat.CategoryId">Usuń</a>
                                                </td>
                                                <td>@item.Aktywny</td>
                                                <td>
                                                    @if (cat.Produkty != null)
                                                    {
                                                        @cat.Produkty.Count
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Id</th>
                                        <th>Nazwa</th>
                                        <th>Kolejnosc</th>
                                        <th>Edit</th>
                                        <th>Usuń</th>
                                        <th>Wł/Wył</th>
                                        <th>Ilość Produktów w kategorii</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }
