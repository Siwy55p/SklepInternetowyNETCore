@{
    ViewData["Title"] = "Lista produktów wybranej Kategorii";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}


@model IEnumerable<partner_aluro.Models.Product>

@section LinkStyleHead
    {

    }
@*
@model partner_aluro.ViewModels.AddProductFormModel
*@

<div>
    <h1 class="display-4">Lista produktów</h1>
    
    <a asp-controller="Product" asp-action="Add" class="btn btn-success" px-3">
    Dodaj produkt
    </a>


    @if (@Model != null && @Model.Any())
    {
        <div class="row">
            <div class="col-md-12 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="ProductTableList" class="display" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Zaz</th>
                                        <th>Obrazek</th>
                                        <th>Symbol</th>
                                        <th>Nazwa produktu</th>
                                        <th>Cena produktu</th>
                                        <th>Cena sprzedazy</th>
                                        <th>Kategoria</th>
                                        <th>Ilość</th>
                                        <th>Ukryte</th>
                                        <th>Akcje</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var productFormModel in Model)
                                    {
                                        <tr>
                                            <td>@productFormModel.ProductId</td>
                                            <td><input id="takenBefore" type="checkbox" value="@productFormModel.ProductId" data-toggle="toggle"></td>
                                            <td><img class="img-thumbnail" src="~/images/produkty/@productFormModel.Symbol/@productFormModel.ImageUrl" alt="@productFormModel.Name" style="width:75px;height:75px;"></td>
                                            <td>@productFormModel.Symbol</td>

                                            <td><a asp-controller="Product" asp-action="Edit" asp-route-id="@productFormModel.ProductId">@productFormModel.Name</a></td>
                                            <td>@productFormModel.CenaProduktu.ToString("C")</td>
                                            <td>@productFormModel.CenaProduktuDetal</td>
                                            <td>@productFormModel.CategoryNavigation.Name</td>
                                            <th>@productFormModel.Ilosc</th>
                                            <th>
                                                @if (productFormModel.Ukryty == true)
                                                {
                                                    <input type="checkbox" data-toggle="toggle" checked disabled>
                                                }else
                                                {
                                                    <input type="checkbox" data-toggle="toggle" unchecked disabled>
                                                }

                                            </th>
                                            <td>
                                                <a asp-controller="Product" asp-action="Edit" asp-route-id="@productFormModel.ProductId">Edytuj</a> |
                                                <a asp-controller="Product" asp-action="Delete" asp-route-id="@productFormModel.ProductId">Usuń</a> |
                                                <a asp-controller="Product" asp-action="Details" asp-route-id="@productFormModel.ProductId">Podgląd</a>

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th scope="col">Id</th>
                                        <th scope="col">Zaz</th>
                                        <th scope="col">Obrazek</th>
                                        <th scope="col">Symbol</th>
                                        <th scope="col">Nazwa produktu</th>
                                        <th scope="col">Cena produktu</th>
                                        <th scope="col">Cena sprzedazy</th>
                                        <th scope="col">Kategoria</th>
                                        <th scope="col">Ilość</th>
                                        <th scope="col">Ukryte</th>
                                        <th scope="col">Akcje</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }

</div>

@section Scripts{

    <script>

        $(document).ready(function () {
            $('#ProductTableList').DataTable(
                {
                    fixedHeader: {
                        headerOffset: 56,
                        header: true,
                        footer: true
                    },
                    "columnDefs": [
                        { "width": "50px", "targets": 2 }
                    ],
                    pageLength: 50,
                    "order": [[0, 'desc'], [3, 'desc']]
                });
        });

    </script>

    <script>
        checkBox = document.getElementById('takenBefore').addEventListener('click', event => {
            if (event.target.checked) {
                alert("Checkbox checked!");
            }
        });
    </script>
}