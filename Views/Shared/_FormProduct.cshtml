@model partner_aluro.Models.Product

<input asp-for="@Model.ProductId" class="form-control" aria-required="true" readonly/>


        <div class="form-group row">
            <label asp-for="@Model.Name" class="col-sm-3 col-form-label text-end">Nazwa produktu</label>
                <div class="col-sm-6">
                <input asp-for="@Model.Name" class="form-control" aria-required="true"  placeholder="Nazwa produktu" />
                <span asp-validation-for="@Model.Name" class="text-danger">
                </span>
                </div>
        </div>

        <div class="form-group row">
        <label asp-for="@Model.Symbol" class="col-sm-3 col-form-label text-end">Symbol</label>
            <div class="col-sm-4">

        @if (@Model.Symbol == null)
        {
            <input required pattern="[^' ']+" asp-for="@Model.Symbol" class="form-control" aria-required="true" placeholder="Symbol" />
        }else
        {
            <input asp-for="@Model.Symbol" class="form-control" aria-required="true" placeholder="Symbol" readonly="readonly" />
        }

            <span asp-validation-for="@Model.Symbol" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row p-2">
            <label asp-for="@Model.KrotkiOpis" class="col-sm-4 col-form-label">Krótki opis</label>
            <textarea asp-for="@Model.KrotkiOpis" id="#textarea" class="form-control" rows="2"></textarea>
        </div>

        <div class="form-group row">
            <label asp-for="@Model.EAN13" class="col-sm-3 col-form-label text-end">EAN13 </label>
            <div class="col-sm-4">
        <input asp-for="@Model.EAN13" class="form-control" aria-required="true" placeholder="EAN13" />
                <span asp-validation-for="@Model.EAN13" class="text-danger">
                </span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.CenaProduktuNetto" class="col-sm-3 col-form-label text-end">Cena produktu hurt (netto) </label>
            <div class="col-sm-4">
                <input asp-for="@Model.CenaProduktuNetto" class="form-control" aria-required="true" id="CenaNetto" placeholder="Cena produktu (netto)" readonly />
                <span asp-validation-for="@Model.CenaProduktuNetto" class="text-danger">
                </span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.CenaProduktuBrutto" class="col-sm-3 col-form-label text-end">Cena produktu hurt (brutto) </label>
                <div class="col-sm-4">
        <input asp-for="@Model.CenaProduktuBrutto" class="form-control" aria-required="true" id="CenaBrutto" placeholder="Cena produktu (brutto)" />
                <span asp-validation-for="@Model.CenaProduktuBrutto" class="text-danger">
                </span>
                </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.CenaProduktuDetal" class="col-sm-3 col-form-label text-end">Cena detaliczna: </label>
                <div class="col-sm-4">
                <input asp-for="@Model.CenaProduktuDetal" class="form-control" aria-required="true" placeholder="Cena detaliczna produktu" />
                <span asp-validation-for="@Model.CenaProduktuDetal" class="text-danger">
                </span>
                </div>
        </div>

        <div class="form-group row">

                @{
                    int ile = Decimal.ToInt32(Model.Ilosc);
                }

             <label asp-for="@Model.Ilosc" class="col-sm-3 col-form-label text-end">Ilość: </label>
                <div class="col-sm-4">



        <input asp-for="@Model.Ilosc" value="@ile" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Ilosc" class="text-danger">
                </span>
                </div>
        </div>

        <div class="form-group row">
            <label asp-for="@Model.Materiał" class="col-sm-3 col-form-label text-end">Materiał: </label>
            <div class="col-sm-4">
                <input asp-for="@Model.Materiał" class="form-control" aria-required="true" placeholder="Materiał" />
                <span asp-validation-for="@Model.Materiał" class="text-danger">
                </span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.Pakowanie:" class="col-sm-3 col-form-label text-end">Pakowanie:</label>
            <div class="col-sm-2">
                <input asp-for="@Model.Pakowanie" class="form-control" aria-required="true" placeholder="np: 1/2" />
                <span asp-validation-for="@Model.Pakowanie" class="text-danger">
                </span>
            </div>
        </div>
        <hr />
        <h4 class="mb-2">Wymiary</h4>
        <div class="input-group">
            Wymiary zewnętrzne:
            <label asp-for="@Model.SzerokoscProduktu" class="col-sm-2 p-0 m-0 col-form-label text-end">Szerokość:</label>
            <input asp-for="@Model.SzerokoscProduktu" type="text" class="form-control p-0 m-0" aria-label="Szerokość produktu" placeholder="Szerokość produktu">
            <label asp-for="@Model.GlebokoscProduktu" class="col-sm-2 p-0 m-0 col-form-label text-end">Głębokość:</label>
            <input asp-for="@Model.GlebokoscProduktu" type="text" class="form-control p-0 m-0" aria-label="Głębokość produktu" placeholder="Głębokość produktu">
            <label asp-for="@Model.WysokoscProduktu" class="col-sm-2 p-0 m-0 col-form-label text-end">Wysokość:</label>
            <input asp-for="@Model.WysokoscProduktu" type="text" class="form-control p-0 m-0" aria-label="Wysokość produktu" placeholder="Wysokość produktu">
        </div>
        <div class="input-group">
            Wymiary wewnętrzne:
            <label asp-for="@Model.SzerokoscWewnetrznaProduktu" class="col-sm-2 p-0 m-0 col-form-label text-end">Szerokość:</label>
            <input asp-for="@Model.SzerokoscWewnetrznaProduktu" type="text" class="form-control p-0 m-0" aria-label="Szerokość produktu" placeholder="Szerokość wew. produktu">
            <label asp-for="@Model.GlebokoscWewnetrznaProduktu" class="col-sm-2 p-0 m-0 col-form-label text-end">Głębokość:</label>
            <input asp-for="@Model.GlebokoscWewnetrznaProduktu" type="text"  class="form-control p-0 m-0" aria-label="Głębokość produktu" placeholder="Głębokość wew. produktu">
            <label asp-for="@Model.WysokoscWewnetrznaProduktu" class="col-sm-2 p-0 m-0 col-form-label text-end">Wysokość:</label>
            <input asp-for="@Model.WysokoscWewnetrznaProduktu" type="text" class="form-control p-0 m-0" aria-label="Wysokość produktu" placeholder="Wysokość wew. produktu">
        </div>

        <div class="form-group row">
            <label asp-for="@Model.WagaProduktu:" class="col-sm-3 col-form-label text-end">Waga Produktu:</label>
            <div class="col-sm-2">
                <input asp-for="@Model.WagaProduktu" class="form-control" aria-required="true" placeholder="Waga produktu" />
                <span asp-validation-for="@Model.WagaProduktu" class="text-danger">
                </span>
            </div>
        </div>
        <hr />
        <div class="form-group">
            <label asp-for="@Model.Promocja" class="col-sm-3 col-form-label text-end">Cena promocyjna: </label>
            <input asp-for="@Model.NazwaPromocyjna" type="text" class="form-control p-0 m-0" placeholder="promocyjna">

            Tak @Html.RadioButtonFor(model => model.Promocja, "True", Model.Promocja == true ? new { Checked = "checked" } : null)
            Nie @Html.RadioButtonFor(model => model.Promocja, "False", Model.Promocja == false ? new { Checked = "unchecked" } : null)
            <span asp-validation-for="@Model.Promocja" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label asp-for="@Model.CenaPromocyja" class="col-sm-3 col-form-label text-end">Cena promocyjna: </label>
                <div class="col-sm-4">
        <input asp-for="@Model.CenaPromocyja" class="form-control" aria-required="true" placeholder="Cena promocyjna" />
        <span asp-validation-for="@Model.CenaPromocyja" class="text-danger">
                </span>
                </div>
        </div>

        <hr class="my-4">
        <h4 class="mb-3">Kategoria Produktu</h4>

        <div class="form-group">
            <label asp-for="@Model.CategoryId" class="control-label">Kategoria Główna:</label>
            <select asp-for="@Model.CategoryId" class="form-control" asp-items="(IEnumerable<SelectListItem>)@ViewData["Category"]">
                @*<option>Select one</option>*@
            </select>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.Description" class="col-sm-4 col-form-label">Opis produktu</label>
            <textarea asp-for="@Model.Description" id="#textarea" class="form-control" rows="3"></textarea>
        </div>

        <div class="form-group row">
            <label asp-for="@Model.DataDodania" class="col-sm-3 col-form-label text-end">DataDodania: </label>
            <div class="col-sm-4">
                <input asp-for="@Model.DataDodania" class="form-control" aria-required="true" placeholder="Materiał" />
                <span asp-validation-for="@Model.DataDodania" class="text-danger">
                </span>
            </div>
        </div>

        <h4 class="mb-2">Widoczność</h4>
        <div class="form-group row border">
            <label class="radio-inline">
                @Html.RadioButtonFor(model => model.Ukryty , true) Wyłączone
            </label>
            <label class="radio-inline">
                @Html.RadioButtonFor(model => model.Ukryty , false) Włączone
            </label>
        </div>
