<h4 class="mb-4">2. @language.Getkey("Metoda dostawy")</h4>
<div class="d-block my-3">
    <div class="custom-control custom-radio">

        <div class="row">
            <div class="col">
                Wybierz metodę wysyłki
            </div>
        </div>
        @foreach (var item in @ViewData["MetodyDostawy"] as List<MetodyDostawy>)
        {
            <div class="row">
                <div class="col border">
                    <label class="custom-control-label">
                        <input asp-for="@Model.Orders.MetodaDostawy" type="radio" value="@item.Opis" id="@item.Nazwa" class="custom-control-input" required="">
                        @language.Getkey(item.Nazwa)
                    </label>
                </div>
                <div class="col border">
                        @item.SzczegolowyOpis
                </div>

            </div>
        }
    </div>
</div>
<hr class="mb-4">
<h4 class="mb-4">3. @language.Getkey("Płatność")</h4>
<div class="d-block my-3">
