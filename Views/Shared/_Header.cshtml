@using Microsoft.AspNetCore.Identity
@using partner_aluro.Areas.Identity;
@using partner_aluro.Data;
@using partner_aluro.Core;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject Cart cart

@inject LanguageService language

<div class="row justify-content-center align-items-center sticky-top navbar-expand-lg navbar-dark bg-dark">
    <div class="col-sm-12 col-md-12 col-lg-12 col-xl-10 col-xxl-8">

        <div class="row">
                    @*Lewa strona*@
                    @if (User.IsInRole("Administrator") || User.IsInRole("Manager"))
                    {
                        <div class="col" style="max-width:60px">
                            <a class="btn btn-secondary" href="@Url.Action("Index","Dashboard")" role="button" alt="panel użytkownika">
                                Panel
                            </a>
                        </div>
                    }
                    <div class="col" style="max-width:110px">
                            <a class="nav-link dropdown-toggle"
                                href="#"
                                role="button"
                                data-bs-toggle="dropdown"
                   aria-expanded="false">
                    @language.Getkey("Język")</i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                    <li class="nav-item dropdown navbar-dark"><a asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="pl" class="nav-link"><i class="ui-icon-flag flag-icon-pl"></i>@language.Getkey("Polski")</a></li>
                    <li class="nav-item dropdown navbar-dark"><a asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="en-US" class="nav-link"><i class="ui-icon-flag flag-icon-en"></i>@language.Getkey("Angielski")</a></li>
                    <li class="nav-item dropdown navbar-dark"><a asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="de-DE" class="nav-link"><i class="ui-icon-flag flag-icon-de"></i>@language.Getkey("Niemiecki")</a></li>
                </ul>
