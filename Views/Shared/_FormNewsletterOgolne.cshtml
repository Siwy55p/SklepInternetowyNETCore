@model partner_aluro.Models.Newsletter

<div class="form-group row">
    <label asp-for="@Model.NewsletterID" class="col col-form-label text-end">Newsletter ID</label>
    <div class="col">
        <input asp-for="@Model.NewsletterID" class="form-control" aria-required="true" readonly />
    </div>
</div>
<div class="form-group row">
    <label asp-for="@Model.Nazwa" class="col-sm-4 col-form-label text-end">Nazwa Newslettera </label>
    <div class="col-sm-8">
        <input asp-for="@Model.Nazwa" class="form-control" aria-required="true" />
        <span asp-validation-for="@Model.Nazwa" class="text-danger"></span>
    </div>
    <label asp-for="@Model.Tytul" class="col-sm-4 col-form-label text-end">Tytul wiadomosci</label>
    <div class="col-sm-8">
        <input asp-for="@Model.Tytul" class="form-control" aria-required="true" />
        <span asp-validation-for="@Model.Tytul" class="text-danger"></span>
    </div>
</div>