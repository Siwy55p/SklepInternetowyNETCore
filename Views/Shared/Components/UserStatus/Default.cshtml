@model partner_aluro.ViewModels.UserStatusModel

@using Microsoft.AspNetCore.Identity
@using partner_aluro.ViewComponents;
@using partner_aluro.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject LanguageService language
@if (SignInManager.IsSignedIn(User) && @Model.User != null)
{
    <div class="nav-item nav-link text-center">
        <span class="text-white">@language.Getkey("Witaj")</span> <span class="text-warning">@Model.User.Imie @Model.User.Nazwisko</span>
            @if(Model.User.ProfilDzialalnosci != null && Model.User.ProfilDzialalnosci.Rabat != 0)
            {
            <br />
                <span class="text-white ">
                @language.Getkey("Twój rabat: ") @Model.User.ProfilDzialalnosci.Rabat %
                </span>
            }
            else{
                ;
            }
    </div>
}
else
{
    <p> Nie jestes zalogowany </p>
}