@model IEnumerable<Category>

<div class="card-header bg-gray text-uppercase"><i class="fa fa-list"></i>Kategorie</div>
<ul class="list-group category_block">
    @foreach (var kategorie in Model)
    {
        @if(kategorie.Aktywny == true)
        {
            <li class="list-group-item">
                <a href="@Url.Action("Lista1","Category", new {KategoriaId = kategorie.CategoryId})" class="nav-link active" aria-current="page">@kategorie.Name</a>
            </li>


            @if (kategorie.SubCategories.Count >= 1)
            {
                @foreach (var kategorie2 in kategorie.SubCategories)
                {
                    <li>
                        <a class="nav-link" href="@Url.Action("Lista1","Category", new {KategoriaId = kategorie2.SubCategoryId})">
                            @kategorie2.Name
                        </a>
                    </li>
                }
            }

        }
    }
</ul>