@model partner_aluro.Models.Product

        <div class="row">
            <div class="col-md-4">
                    <div class="form-group">
                    <input asp-for="product_Image.ImageFile" accept="images/png,images/jpg,images/jpeg" class="custom-file-input" id="FLFrontImage"
                           onchange="document.getElementById('FrontImagePrv').src = window.URL.createObjectURL(this.files[0])" /> @*/image/png,image/jpg*@
                        <span asp-validation-for="product_Image.ImageFile" class="text-danger"></span>
                    </div>

            </div>
        </div>


        <div class="form-group border">
            <label asp-for="@Model.ImageUrl" class="control-label">Obrazek prezentujacy (front)</label>
            <img id="FrontImagePrv" src="~/images/produkty/@Model.Symbol/@Model.ImageUrl" alt="Logo image" width="150" height="150" style="border:1px; margin-top:20px; margin-left:120px" />
        </div>





<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    Launch demo modal
</button>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>







        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="@Model.Product_Images" class="control-label"></label>
                    <input type="file" asp-for="@Model.Product_Images" id="images" name="images[]" onchange="preview_images();" multiple accept="image/jpeg, image/png, image/jpg" />
            <span asp-validation-for="@Model.Product_Images" class="text-danger"></span>
                </div>

            </div>
        </div>

        @if (Model.Product_Images != null)
        {
                <div class="row">
                    <div class="col-md-12 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table id="example"
                                       class="table table-striped data-table"
                                       style="width: 100%">
                                        <thead>
                                            <tr>
                                                <th>Obrazek</th>
                                                <th>Kolejnosc</th>
                                                <th>Akcje</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                                @foreach (var image in Model.Product_Images)
                                                {
                                                <tr>
                                                    <td>
                                                            <img src="~/images/produkty/@Model.Symbol/@image.ImageName" alt="Logo image" width="100" height="100" style="border:1px; margin-top:20px;" />
                                                    </td>
                                                        <td>@image.kolejnosc</td>


                                                    <td>
                                                        <a asp-action="Edit" asp-controller="Image" asp-route-id="@image.ImageId">Edit</a> |
                                                        <a asp-action="Details" asp-controller="Image" asp-route-id="@image.ImageId">Details</a> |
                                                        <a asp-action="Delete" asp-controller="Image" asp-route-id="@image.ImageId">Delete</a>
                                                    </td>


                                                </tr>
                                                }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            
        }

        <div class="row" id="image_preview">
        </div> 

