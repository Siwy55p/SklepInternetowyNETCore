@model partner_aluro.Models.Newsletter

<div class="form-group row">
    <label asp-for="@Model.NewsletterID" class="col-sm-3 col-form-label text-end">Newsletter ID</label>
    <input asp-for="@Model.NewsletterID" class="form-control" aria-required="true" readonly />
    <div class="col-sm-4">

        <div class="form-group row">
            <label asp-for="@Model.Nazwa" class="col-sm-3 col-form-label text-end">Nazwa</label>
                <div class="col-sm-6">
                <input asp-for="@Model.Nazwa" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Nazwa" class="text-danger">
                </span>
                </div>
        </div>

        <div class="form-group row p-2">
            <label asp-for="@Model.MessagerBody" class="col-sm-4 col-form-label">Wiadomość e-mail</label>
            <textarea asp-for="@Model.MessagerBody" class="form-control" rows="2"></textarea>
        </div>

         <div class="form-group">
            <label asp-for="@Model.listaEmail" class="control-label">Kategoria:</label>
            <select asp-for="@Model.listaEmail" class="form-control" asp-items="ViewBag.Email">
                @*<option>Select one</option>*@
            </select>
        </div>

    </div>
</div>