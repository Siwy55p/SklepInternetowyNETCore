<div class="row g-3">
    <div class="col-sm-6">
        <label asp-for="@Model.Name" class="form-label">Nazwa podkategori</label>
        <input asp-for="@Model.Name" class="form-control" aria-required="true" placeholder="Nazwa kategori" />
        <span asp-validation-for="@Model.Name" class="text-danger">
        </span>
    </div>
</div>

<div class="form-group">
    <label asp-for="@Model.SubCatId" class="control-label">Kategoria nadrzędna</label>
    <select asp-for="@Model.SubCatId" class="form-control" asp-items="(IEnumerable<SelectListItem>)@ViewData["kategorie"]">
        <option>Select one</option>
    </select>
</div>

<div class="row g-3">
    <div class="col-sm-6">
        <label asp-for="@Model." class="form-label">Opis</label>
        <textarea asp-for="@Model.Description" class="form-control" rows="3" placeholder="Opis kategori"></textarea>
        <span asp-validation-for="@Model.Description" class="text-danger">
        </span>
    </div>
</div>

<div class="row g-3">
    <div class="col-sm-6">
        <label asp-for="@Model." class="form-label">Opis</label>
        <textarea asp-for="@Model.kolejnosc" class="form-control" rows="3" placeholder="Kolejnosc (narazie nie działa)"></textarea>
        <span asp-validation-for="@Model.kolejnosc" class="text-danger">
        </span>
    </div>
</div>

