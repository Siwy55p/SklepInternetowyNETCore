                        <input class="form-control" asp-for="@Model.User.Adress2dostawy.Imie" id="Imie2"class="form-control"  />
                        <span asp-validation-for="@Model.User.Adress2dostawy.Imie" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="@Model.User.Adress2dostawy.Nazwisko">Nazwisko</label>
                        <input class="form-control" asp-for="@Model.User.Adress2dostawy.Nazwisko" id="Nazwisko2" class="form-control"  />
                        <span asp-validation-for="@Model.User.Adress2dostawy.Nazwisko" class="text-danger"></span>
                    </div>
                
                    <div class="col-md-6 mb-3">
