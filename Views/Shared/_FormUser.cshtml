                    <div class="col-md-6 mb-3">
                        <label asp-for="@Model.User.Adress2dostawy.KodPocztowy">Kod pocztowy/Zip</label>
                        <input class="form-control" asp-for="@Model.User.Adress2dostawy.KodPocztowy" id="KodPocztowy2" class="form-control"  />
                        <span asp-validation-for="@Model.User.Adress2dostawy.KodPocztowy" class="text-danger"></span>
                    </div>
                </div>
            </div>
        <hr class="mb-4">
    </div>
