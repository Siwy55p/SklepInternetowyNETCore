                    </div>
                    <div class="col-md-5 mb-3">
                        <label asp-for="@Model.User.Adress2dostawy.Kraj">Kraj</label>
                        <input class="form-control" asp-for="@Model.User.Adress2dostawy.Kraj" id="Kraj2" class="form-control"/>
                        <span asp-validation-for="@Model.User.Adress2dostawy.Kraj" class="text-danger"></span>
