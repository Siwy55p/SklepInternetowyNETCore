
@model partner_aluro.ViewModels.EditUserViewModel

@inject LanguageService language

        @Html.HiddenFor(h=>Model.User.Id)
        
        <div class="mb-3">
            <label asp-for="@Model.User.Adress1rozliczeniowy.Vat" >NIP</label>
            <input asp-for="@Model.User.Adress1rozliczeniowy.Vat" class="form-control" id="floatingInputVAT" placeholder="Nr NIP" value="@Model.User.Adress1rozliczeniowy.Vat" required />
            <span asp-validation-for="@Model.User.Adress1rozliczeniowy.Vat" class="text-danger"></span>
        </div>


            <div class="form-group">
                <label for="@Model.User.Imie">Imie test</label>
    <input asp-for="@Model.User.Imie" class="form-control" id="Imie" value="@Model.User.Imie"></input>
            </div>



        <div class="col-sm-6">
            <label asp-for="@Model.User.Nazwisko" class="form-label">Nazwisko</label>
            <input asp-for="@Model.User.Nazwisko" id="Nazwisko"  class="form-control" value="@Model.User.Nazwisko" autocomplete="Nazwisko" aria-required="true" />
            <span asp-validation-for="@Model.User.Nazwisko" class="text-danger"></span>
        </div>
        <div class="col-sm-6">
            <label asp-for="@Model.User.NazwaFirmy" class="form-label">Nazwa firmy</label>
            <input asp-for="@Model.User.NazwaFirmy" id="NazwaFirmy"  class="form-control" autocomplete="NazwaFirmy" aria-required="true" />
            <span asp-validation-for="@Model.User.NazwaFirmy" class="text-danger"></span>
        </div>

        <div class="col-6">
            <label asp-for="@Model.User.Email" class="form-label">Email</label>
            <input asp-for="@Model.User.Email" id="Email"  class="form-control" id="email" placeholder="you@example.com">
            <span asp-validation-for="@Model.User.Email" class=" text-danger"></span>

        <div class="col-6">
            <label asp-for="@Model.User.UserName" class="form-label">Nazwa użytkownika</label>
            <input asp-for="@Model.User.UserName" id="UserName" class="form-control" autocomplete="UserName" aria-required="true" readonly />
            <span asp-validation-for="@Model.User.UserName" class=" text-danger"></span>
        </div>

        </div>
        <hr />
        <div class="form-group col-6">
            <select asp-for="@Model.User.IdProfilDzialalnosci" class="form-control" asp-items="(IEnumerable<SelectListItem>)@ViewData["Profile"]"></select>
            <label asp-for="@Model.User.IdProfilDzialalnosci" class="control-label text-center"></label>
            <span asp-validation-for="@Model.User.IdProfilDzialalnosci" class=" text-danger"></span>
        </div>
        <hr class="my-4">
        <h4 class="mb-3">Uprawnienia</h4>
        <div class="my-3">
            @for (int i = 0; i < @Model.Roles.Count(); i++)
            {
                <div class="form-check">
                    @Html.CheckBoxFor(r => r.Roles[i].Selected)
                    @Html.HiddenFor(h => Model.Roles[i].Value)

                    @Html.LabelFor(l => Model.Roles[i].Selected, Model.Roles[i].Text, new {@class="form-check-label"})
                    @Html.HiddenFor(h => Model.Roles[i].Text)
                </div>
            }
        </div>
    <hr class="my-4">

    <div class="mb-3">
        <label asp-for="@Model.User.Adress1rozliczeniowy.Telefon">Telefon</label>
        @Html.TextBoxFor(m => m.User.Adress1rozliczeniowy.Telefon, new {@class="form-control", Value=String.Format("{0:d}", Model.User.Adress1rozliczeniowy.Telefon)  })
        <span asp-validation-for="@Model.User.Adress1rozliczeniowy.Telefon" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label for="@Model.User.NotatkaOsobista">Notatka osobista</label>
        <textarea asp-for="@Model.User.NotatkaOsobista" class="form-control" id="NotatkaOsobista" rows="3" value="@Model.User.NotatkaOsobista"></textarea>
         <span asp-validation-for="@Model.User.NotatkaOsobista" class="text-danger"></span>
    </div>


    <button class="w-100 btn btn-success" type="submit">Zapisz</button>

    <hr class="my-4">
    <h4 class="d-flex justify-content-between align-items-center mb-3">2. Adresy</h4>
        <div class="row">
            <hr class="mb-4">
            <div class="col-md-6 order-md-2 mb-4">

                <h4 class="mb-3">Adres rozliczeniowy</h4>

                <div class="mb-3">
                    <label asp-for="@Model.User.Adress1rozliczeniowy.Regon">Regon</label>
                    <input asp-for="@Model.User.Adress1rozliczeniowy.Regon" id="Regon" class="form-control" placeholder="Nr Regon" value="@Model.User.Adress1rozliczeniowy.Regon" required />
                    <span asp-validation-for="@Model.User.Adress1rozliczeniowy.Regon" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.User.Adress1rozliczeniowy.Wojewodztwo">Wojewodztwo</label>
                    <input asp-for="@Model.User.Adress1rozliczeniowy.Wojewodztwo" id="Wojewodztwo1" class="form-control" placeholder="Wojewodztwo" value="@Model.User.Adress1rozliczeniowy.Wojewodztwo" required />
                    <span asp-validation-for="@Model.User.Adress1rozliczeniowy.Wojewodztwo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.User.Adress1rozliczeniowy.Powiat">Powiat</label>
                    <input asp-for="@Model.User.Adress1rozliczeniowy.Powiat" id="Powiat1"  class="form-control" placeholder="Powiat" value="@Model.User.Adress1rozliczeniowy.Powiat" required />
                    <span asp-validation-for="@Model.User.Adress1rozliczeniowy.Powiat" class="text-danger"></span>
                </div>
        <div class="col-md-6 mb-3">
            <label asp-for="@Model.User.Adress1rozliczeniowy.Ulica">Ulica</label>
            <input class="form-control" id="Ulica1" asp-for="@Model.User.Adress1rozliczeniowy.Ulica" id="Ulica" id="disabledInput" class="form-control" value="@Model.User.Adress1rozliczeniowy.Ulica" />
            <span asp-validation-for="@Model.User.Adress1rozliczeniowy.Ulica" class="text-danger"></span>
        </div>

                <div class="row">
                    <div class="col-md-5 mb-3">
                        <label asp-for="@Model.User.Adress1rozliczeniowy.Kraj">Kraj</label>
                        <input asp-for="@Model.User.Adress1rozliczeniowy.Kraj" id="Kraj1"  class="form-control" placeholder="Kraj" value="@Model.User.Adress1rozliczeniowy.Kraj" required />
                        <span asp-validation-for="@Model.User.Adress1rozliczeniowy.Kraj" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="@Model.User.Adress1rozliczeniowy.Miasto">Miasto</label>
                        <input class="form-control" asp-for="@Model.User.Adress1rozliczeniowy.Miasto" id="Miasto1" class="form-control" value="@Model.User.Adress1rozliczeniowy.Miasto"   />
                        <span asp-validation-for="@Model.User.Adress1rozliczeniowy.Miasto" class="text-danger"></span>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label asp-for="@Model.User.Adress1rozliczeniowy.KodPocztowy">Kod pocztowy/Zip</label>
                        <input class="form-control" asp-for="@Model.User.Adress1rozliczeniowy.KodPocztowy" id="KodPocztowy1" value="@Model.User.Adress1rozliczeniowy.KodPocztowy" />
                        <span asp-validation-for="@Model.User.Adress1rozliczeniowy.KodPocztowy" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.User.Adress1rozliczeniowy.StatusNip">StatusNip</label>
                    @Html.TextBoxFor(m => m.User.Adress1rozliczeniowy.StatusNip, new {@class="form-control", Value=String.Format("{0:d}", Model.User.Adress1rozliczeniowy.StatusNip)  })
                    <span asp-validation-for="@Model.User.Adress1rozliczeniowy.StatusNip" class="text-danger"></span>
                </div>




            </div>
            <div class="col-md-6 order-md-1">
