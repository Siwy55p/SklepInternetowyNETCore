              @foreach(var role in Model.Roles)
              {
            <div class="form-check">
              <input id="@role.Value" name="paymentMethod" type="checkbox" class="form-check-input" checked="@role.Selected" required="">
              <label class="form-check-label" asp-for="@role.Value">@role.Text</label>
            </div>
              }*@
        </div>
          <hr class="my-4">

        <div class="form-group">
            <label for="@Model.User.NotatkaOsobista">Notatka osobista</label>
            <textarea asp-for="@Model.User.NotatkaOsobista" class="form-control" id="NotatkaOsobista" rows="3" value="@Model.User.NotatkaOsobista"></textarea>
        </div>


          <button class="w-100 btn btn-primary btn-lg" type="submit">Zapisz</button>
@*    }*@

    <hr class="my-4">
