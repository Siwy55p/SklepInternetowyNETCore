@model IEnumerable<partner_aluro.Models.Newsletter>
@{
    ViewData["Title"] = "Newsletter";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="row sticky-top bg-light border-bottom">
    <div class="col"><h3>Newsletter</h3></div>
    <div class="col">
        <a asp-controller="Newsletter" asp-action="Add" class="btn btn-success float-end" px-3">
            Dodaj Newsletter
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-12 mb-3">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table
                           class="table table-striped data-table"
                           style="width: 100%">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Zaznacz</th>
                                <th>Nazwa</th>
                                <th>Akcje</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var newsletter in Model)
                            {
                                <tr>
                                    <td>@newsletter.NewsletterID</td>
                                    <td><input id="takenBefore" type="checkbox" value="@newsletter.NewsletterID" data-toggle="toggle"></td>
                                    <td>@newsletter.Nazwa</td>
                                    <td>
                                        <a asp-controller="Newsletter" asp-action="Edit" asp-route-id="@newsletter.NewsletterID">Edytuj</a> |
                                        <a asp-controller="Newsletter" asp-action="Delete" asp-route-id="@newsletter.NewsletterID">Usuń</a> |
                                        <a asp-controller="Newsletter" asp-action="SendEmail" asp-route-id="@newsletter.NewsletterID">Wyślij</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>