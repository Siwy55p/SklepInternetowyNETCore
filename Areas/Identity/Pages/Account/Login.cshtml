@page
@using partner_aluro.Areas.Identity.Pages.Account
@model LoginModel

@{
    ViewData["Title"] = "Zaloguj się";
}

<div class="logoLoginReg">
    <div class="justify-content-center align-items-center" style="height:300px">
        <img id="logoLogin" src="~/images/logo/aluro_logo-x-300_2.png" width="300px" />
    </div>
</div>
<div class="col-md-4 justify-content-center align-items-center">
    <section class="p-3 border">
        <form id="account" method="post" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.Password" class="form-label"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div>
                <div class="checkbox">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <button id="login-submit" type="submit" class="w-100 btn btn-md btn-primary">Zaloguj się</button>
                </div>
      
                <div class="col-6">
                    <a class="w-100 btn btn-md btn-success" asp-page="./Register" asp-route-pass="@Model.pass2" asp-route-email="@Model.email2" asp-route-returnUrl="@Model.ReturnUrl">Utwórz nowe konto</a>
                </div>
            </div>
            <div>
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">Zapomniałeś hasło?</a>
                </p>
                @* <p>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Wyślij wiadomość przypominającą </a>
                </p>*@
            </div>
        </form>
    </section>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
