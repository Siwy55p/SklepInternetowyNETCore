@page
@using partner_aluro.Areas.Identity.Pages.Account
@model LoginModel

@{
    ViewData["Title"] = "Zaloguj się";
}
<div class="border col-8">
    <div class="row">
        <div class="col-md-6">
            <section class="p-3 border w-100">
                <form id="account" method="post" >
                    <h2>Zaloguj się</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div>
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Zaloguj się</button>
                    </div>
                    <div>
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Zapomniałeś hasło?</a>
                        </p>
                       @* <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Wyślij wiadomość przypominającą </a>
                        </p>*@
                    </div>
                </form>
            </section>
        </div>
        <div class="col-md-6">
            <section class="p-3 border w-100">

                    <h2>Zarejestruj się</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="Input.Email2" placeholder="email@example.com" class="form-control" aria-required="true" />
                        <label asp-for="Input.Email2" class="form-label"></label>
                        <span asp-validation-for="Input.Email2" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                    <input asp-for="Input.Password2" placeholder="password" class="form-control" aria-required="true" />
                    <label asp-for="Input.Password2" class="form-label"></label>
                    <span asp-validation-for="Input.Password2" class="text-danger"></span>
                    </div>
                <div class="p-3">
                </div>
                <div>
                    <a class="w-100 btn btn-lg btn-primary" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" asp-route-email="Input.Password2" asp-route-email="Input.Email">Zarejestruj się</a>
                </div>
                <div class="p-3">
                </div>

