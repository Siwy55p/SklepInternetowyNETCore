@page
@using partner_aluro.Areas.Identity.Pages.Account
@model LoginModel

@{
    ViewData["Title"] = "Zaloguj się";
}

<div class="col-3 logoLoginReg" style="height:300px">
    <div class="col-3 d-flex justify-content-left align-items-left">
        <img id="logoLogin" class="  " src="~/images/logo/aluro_logo-x-300_2.png" width="300" />
    </div>
</div>
<div class="col-3 justify-content-center align-items-center">
            <section class="p-3 border w-100 ">
                <form id="account" method="post" >
                    <h2>Zaloguj się</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div>
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Zaloguj się</button>
                        </div>
                        <div class="col">
                            <a class="w-100 btn btn-lg btn-primary" asp-page="./Register" asp-route-pass="@Model.pass2" asp-route-email="@Model.email2" asp-route-returnUrl="@Model.ReturnUrl">Zarejestruj się</a>
                        </div>
                    </div>
                    <div>
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Zapomniałeś hasło?</a>
                        </p>
                       @* <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Wyślij wiadomość przypominającą </a>
                        </p>*@
                    </div>
                </form>
            </section>
        </div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
